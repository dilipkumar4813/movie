<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainTitle" parent="TextBold">
        <item name="android:textSize">@dimen/main_title_font_size</item>
        <item name="android:padding">@dimen/long_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MainTitleLandscape" parent="TextBold">
        <item name="android:textSize">@dimen/main_title_font_size</item>
        <item name="android:paddingTop">@dimen/long_padding</item>
        <item name="android:paddingBottom">@dimen/long_padding</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="SubTitle" parent="TextBold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sub_title_font_size</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/margin_start_and_end</item>
        <item name="android:layout_marginRight">@dimen/margin_start_and_end</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginLeft">@dimen/margin_start_and_end</item>
        <item name="android:layout_marginRight">@dimen/margin_start_and_end</item>
    </style>

    <style name="NormalText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/normal_text_font_size</item>
        <item name="android:layout_marginTop">@dimen/short_spacing</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>
